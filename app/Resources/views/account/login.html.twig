{% extends 'layouts/layout.html.twig' %}

{% block main %}
    
    <div class="container">
        <div class="my-5 d-flex justify-content-center">
            <div class="col-12 col-md-6 text-center">

                <form method="post" action="/en/account/login">
                    <h1 class="display-3 mb-3 font-weight-normal">Please Sign-In</h1>
                    <input type="email" id="_username" name="_username" required="required" placeholder="Username" class="form-control">
                    <input type="password" id="_password" name="_password" required="required" placeholder="Password" class="form-control mt-2">

                    {# <input type="hidden" name="_csrf_token" value="3i5-UcOfn7cLTefBc7tEluuN1m4-cXnhH0vMXHazX6U"> #}

                    <div class="custom-control custom-checkbox mb-3 mt-2">
                        <input name="_remember_me" type="checkbox" class="custom-control-input" id="rememberMe">
                        <label class="custom-control-label" for="rememberMe">Remember me</label>
                    </div>

                    <div class="form-group">
                        <button type="submit" id="_submit" name="_submit" class="btn-success btn-lg btn-block mt-4 btn" disabled>Login</button>
                    </div>

                    {# <input type="hidden" id="_target_path" name="_target_path"><input type="hidden" id="_token" name="_token" value="Up8FFMoWOsrjPiWWJ5btqYvyc4K-yEB1hqA-ilZDTC4"> #}
                </form>

                <p>Forgot password?  <a href="#">Password Recovery</a></p>
                <p>No Account? <a href="{{ path('account-register') }}">Register now!</a></p>

                <a class="btn btn-secondary btn-sm" href="#">
                    <i class="fab fa-google" aria-hidden="true"></i>
                    Sign in with google
                </a>

                <a class="btn btn-secondary btn-sm" href="#">
                    <i class="fab fa-twitter" aria-hidden="true"></i>
                    Sign in with twitter
                </a>

            </div>
        </div>
    </div>
{% endblock %}
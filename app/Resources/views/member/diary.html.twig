{% extends 'layouts/layout.html.twig' %}

{% block body %}
    {# NavBar - tabs #}
    <div class="col-9 mt-4">
        <div class="row mb-3">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-notes-tab" data-toggle="pill" href="#pills-notes" role="tab" aria-controls="pills-notes" aria-selected="false">Notes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-experiences-tab" data-toggle="pill" href="#pills-experiences" role="tab" aria-controls="pills-experiences" aria-selected="false">Experiences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-dreams-tab" data-toggle="pill" href="#pills-dreams" role="tab" aria-controls="pills-dreams" aria-selected="false">Dreams</a>
                </li>
            </ul>

            <ul class="nav ml-auto mt-auto">
                <li class="nav-item">
                    {# Add notes trigger modal #}
                    <div data-toggle="modal" data-target="#exampleModalCenter">
                        <img class="mt-auto" id="new-note-btn" src="{{ asset('/static/images/new_note_btn.svg') }}" width="30" height="30" alt="new-note-btn" loading="lazy">
                    </div>
                </li>
            </ul>

            {# Include Add notes Modal #}
            {% include '/include/member/add_note_modal.html.twig' %}
        </div>

        <div class="row mt-4">
            <div class="tab-content" id="pills-tabContent">
                {# Include Navbar - tab_content #}
                {% include '/include/member/tab_content.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
